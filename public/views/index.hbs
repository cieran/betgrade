
    <section class="main-body">
        <div class="bet-column-head">
            <div class="col-xs-6 col-md-6">Student Name</div>
            <div class="col-xs-3 col-md-3">Back</div>
            <div class="col-xs-3 col-md-3">Lay</div>
        </div>
        <div class="bet-column-market">
            {{# each items}}
            <div class="col-xs-6 col-md-6"><a class="names" href="/markets/{{filename}}"> {{this.student}} </a></div>
            <div class="col-xs-3 col-md-3"><button class="addmarket btn btn-block btn-info" data-toggle="modal" data-side="Back" data-odds="{{this.back}}" data-student="{{this.student}}" data-market="{{this.marketname}}" data-target="#myModal"> {{this.back}}<br><p>{{this.btotal}}mBTC</p> </button></div>
            <div class="col-xs-3 col-md-3"><button class="addmarket btn btn-block btn-danger" data-toggle="modal" data-side="Lay" data-odds="{{this.lay}}" data-student="{{this.student}}" data-market="{{this.marketname}}" data-target="#myModal"> {{this.lay}}<br><p>{{this.ltotal}}mBTC</p> </button></div>
            {{/each}}
        </div>  
		
</section>


<div class="modal" id="myModal">
    <div class="modal-content">
    <div class="row">
        <div class="col-xs-12 col-md-12">
                <span class="close pull-right">Ã—</span>

            <!-- BETSLIP FORM STARTS HERE -->
            <div class="panel panel-default betslip-box">
                <div>
                    <div class="row display-tr">
                        <img class="betslip-logo" src="/img/betgrade_big.png"/>
                    </div>
                </div>
                <div class="panel-body">
                    <form action="/bet" method="post">
                        <div class="row">
                            <div class="col-xs-4">
                                <label>BET SINGLE</label>
                                <input type="text" name="student" id="student" value="" readonly/>
                                <input type="text" name="marketname" id="marketname" value="" readonly/>
                                <input type="text" name="side" id="side" value="" readonly/>
                                <h4 name="marketname" id="marketname" value=""></h4>
                            </div>
                            <div class="col-xs-4 pull-center">
                                <div class="form-group">
                                    <label>ODDS</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bitcoin"></i></span><input autocomplete="off"
                                               class="form-control"
                                               id="odds" name=
                                               "odds" placeholder=
                                               "Odds" required=""
                                               type="number" ng-model="stake"> 
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-4 pull-right">
                                <div class="form-group">
                                    <label>STAKE</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bitcoin"></i></span><input autocomplete="off"
                                               autofocus="" class="form-control"
                                               id="stake" min="10" max="2000" name=
                                               "stake" placeholder=
                                               "mBTC" required=""
                                               type="number"> 
                                    </div>
                                </div>
                            </div>
                        </div>
                            <div class="row">
                            <div class="col-xs-4 pull-right">
                                <p>Returns:  mBTC</p>
                            </div>
                            </div>

                        <div class="row">
                            <div class="col-xs-12 bet-button">
                                <input type="submit" class="user-routes place-bet" value="Place Bet">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>