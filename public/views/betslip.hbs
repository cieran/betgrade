
<div class="container" id="fouc">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <!-- BETSLIP FORM STARTS HERE -->
            <div class="panel panel-default betslip-box">
                <div>
                    <div class="row display-tr">
                        <img class="betslip-logo" src="assets/img/betgrade_big.png"/>
                    </div>
                </div>
                <div class="panel-body">
                    <form action="payment"
                          method="post">
                        <div class="row">
                            <div class="col-xs-8">
                                <label>BET SINGLE</label>
                                <h4>person - outcome (odds)</h4>
                            </div>
                            <div class="col-xs-4 pull-right">
                                <div class="form-group">
                                    <label>STAKE</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bitcoin"></i></span><input autocomplete="off"
                                               autofocus="" class="form-control"
                                               id="stake" min="10" max="2000" name=
                                               "stake" placeholder=
                                               "mBTC" required=""
                                               type="number" ng-model="stake"> 
                                    </div>
                                </div>
                            </div>
                        </div>
                            <div class="row">
                            <div class="col-xs-4 pull-right">
                                <p>Returns:  mBTC</p>
                            </div>
                            </div>

                        <div class="row">
                            <div class="col-xs-12">
                                <button class=
                                                "btn btn-info btn-lg btn-block" id=
                                                "process-payment-btn" type="submit">Place Bet</button>
                            </div>
                        </div>
                        <div class="row" style="display:none;">
                            <div class="col-xs-12">
                                <p class="payment-errors"></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>