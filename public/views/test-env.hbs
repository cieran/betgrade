
<section class="main-body">
        <div class="bet-column-head">
            <div class="col-xs-4 col-md-4">Student Name</div>
            <div class="col-xs-2 col-md-2"></div>
            <div class="col-xs-2 col-md-2">Back</div>            
            <div class="col-xs-2 col-md-2">Lay</div>
            <div class="col-xs-2 col-md-2"></div>
        </div>
        <div class="bet-column-market">
            {{# each items}}
            <div class="col-xs-4 col-md-4"><a class="names" href="/markets/{{filename}}"> {{this._id}} </a></div>
            <div class="col-xs-2 col-md-2"><button class="addmarket btn btn-block btn-default" data-toggle="modal" data-side="Back" data-odds="{{this.odds}}" data-student="{{this.student}}" data-market="{{this.marketname}}" data-target="#myModal"> {{this.odds}}<br><p>{{this.total}}mBTC</p> </button></div>
            <div class="col-xs-2 col-md-2"><button class="addmarket btn btn-block btn-info" data-toggle="modal" data-side="Back" data-odds="{{this.odds}}" data-student="{{this.student}}" data-market="{{this.marketname}}" data-target="#myModal"> {{this.odds}}<br><p>{{this.total}}mBTC</p> </button></div>            
            <div class="col-xs-2 col-md-2"><button class="addmarket btn btn-block btn-danger" data-toggle="modal" data-side="Lay" data-odds="{{this.odds}}" data-student="{{this.student}}" data-market="{{this.marketname}}" data-target="#myModal"> {{this.odds}}<br><p>{{this.total}}mBTC</p> </button></div>
            <div class="col-xs-2 col-md-2"><button class="addmarket btn btn-block btn-default" data-toggle="modal" data-side="Lay" data-odds="{{this.odds}}" data-student="{{this.student}}" data-market="{{this.marketname}}" data-target="#myModal"> {{this.odds}}<br><p>{{this.total}}mBTC</p> </button></div>
            {{/each}}
        </div>  		
</section>